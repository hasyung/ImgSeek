<% if !@server_status.blank? %>
  <table id="status" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>序号</th>
        <th>名称</th>
        <th>值</th>
      </tr>
    </thead>
    <tbody>
      <% @server_status.each do |k, v| %>
      <tr>
        <td>#</td>
        <td><%= translate_format(k, "admin.messages") %></td>
        <td><%= v %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>